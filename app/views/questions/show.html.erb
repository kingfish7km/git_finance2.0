<div class="Question-show">
    <div class="Q-icon">
      <h2 class="Q">Q</h2>
    </div>
    <div class="Q-text">
      <div class="text">
        <p><%= @question.text %></p>
      </div>
    </div>
</div>

<% @replies.each do |reply| %>
    <div class="Replies">
      <div class="A-icon">
        <h2 class="A">A</h2>
      </div>
      <div class="A-text-area">
        <div class="A-text">
          <p><%= reply.text %></p>
        </div>
      </div>
    </div>
<% end %>

<% if @replies.empty? %>
  <div class="Replies">
    <p>この質問に対する回答は現在準備中です。</p>
  </div>
<% end %>
